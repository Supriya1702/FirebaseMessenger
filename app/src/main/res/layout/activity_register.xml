<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity" android:background="@android:color/holo_green_light"
        android:gravity="center">


    <Button
            android:id="@+id/selectphoto_button_register"
            android:layout_width="150dp" android:layout_height="150dp"
            android:background="@drawable/rounded_profile_image_tv"
            android:layout_gravity="center"/>

    <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/selectphoto_image_register"
            android:layout_width="150dp"
            android:layout_height="150dp"

            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
         />
    <EditText
            android:layout_margin="5dp"
            android:gravity=""
            android:layout_gravity="center"
            android:layout_width="346dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/username_btn"
            android:hint="username"
            android:background="@drawable/rounded_edit_text"
            android:text=""
    />
    <EditText
            android:layout_margin="5dp"
            android:text=""
            android:layout_gravity="center"
            android:layout_width="346dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_edt"
            android:background="@drawable/rounded_edit_text"
            android:hint="email"

         />
    <EditText

            android:layout_gravity="center"
            android:layout_width="346dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_edt"
            android:background="@drawable/rounded_edit_text"
            android:hint="password"
            android:text=""
    />
    <Button
            android:layout_margin="5dp"
            android:layout_width="346dp" android:layout_height="50dp"
            android:text="REgister"
            android:background="@drawable/rounded_register_btn"
            android:id="@+id/register_btn"
           />
    <TextView
            android:layout_margin="5dp"
            android:layout_width="346dp" android:layout_height="50dp"
              android:id="@+id/already_have_account_tv"
              android:text="Already have an Account?"
              android:gravity="center_horizontal"
             />

</LinearLayout>