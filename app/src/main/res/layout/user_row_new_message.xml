<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView android:layout_width="100dp" android:layout_height="100dp"
               android:layout_marginVertical="5dp"
               android:src="@drawable/dp_placeholder" android:layout_marginEnd="8dp"
               app:layout_constraintEnd_toStartOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="8dp"
               app:layout_constraintHorizontal_bias="0.459" android:layout_marginTop="8dp"
               app:layout_constraintTop_toTopOf="parent"/>
    <TextView android:layout_width="200dp" android:layout_height="50dp"
              android:id="@+id/textView" android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp"

              android:textSize="16sp"
              android:gravity="center"
              android:hint="Username"/>
</androidx.constraintlayout.widget.ConstraintLayout>